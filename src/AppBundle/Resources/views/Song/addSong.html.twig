{% extends "::base.html.twig" %}

{% block title %} add Song {% endblock %}

{% block content %}
    <h4 class="mb"><i class="fa fa-angle-right"></i> Add Song</h4>
    <div class="col-lg-12">
        {{ form_start(form) }}
            <div class="col-lg-12">
                {{ form_row(form.name) }}
                <span class="help-block">Введите название песни.</span>
            </div>

            <div class="col-lg-12">
                {{ form_row(form.timeline) }}
            </div>

            <div class="col-lg-12">
                <button type="submit">Додати</button>
            </div>
        {{ form_end(form) }}
    </div>

{% endblock %}