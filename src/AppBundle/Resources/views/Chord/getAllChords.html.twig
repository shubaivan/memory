{% extends "::base.html.twig" %}

{% block title %} AllChords {% endblock %}

{% block content %}
    {% if is_granted('ROLE_USER') %}

        <div>
            <a href="{{ path('app_add_chord', {"slugChord" : song.album.slug, "slug" : song.slug}) }}">Добавить аккорды</a>
        </div>

    {% endif %}


    <table>

        <tr>
                 <th>Акорды</th>
        </tr>
        <tr>

            <td>
                {% for chord in song.chord %}
                    <div class="col-lg-12">
                        <div class="col-lg-12">
                            <a href="{{ path('app_get_single_chord', {"slugAlbum" : song.album.slug, "slugSong" : song.slug, "slug" : chord.slug}) }}">{{ chord.title }}</a>
                        </div>

                    </div>
                {% endfor %}
            </td>
        </tr>
    </table>
{% endblock %}
