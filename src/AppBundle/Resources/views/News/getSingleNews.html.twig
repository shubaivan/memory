{% extends "::base.html.twig" %}

{% block title %} Новина {{ news.title }} {% endblock %}

{% block content %}

<div class="col-sm-12" id="featured" xmlns="http://www.w3.org/1999/html">
    <div class="page-header text-muted">
        {{ news.title }}
    </div>
</div>

<!--/top story-->
<div class="row">
    <div class="col-sm-10">

            <small class="text-muted">{{ news.text }}</small>

    </div>
    <div class="col-lg-12">
        Добавив: {{ news.author.username }}</br>
        {{ news.createdAt|date("m/d/Y") }}
    </div>
    <a href="{{ path('app_add_comments', {'slug' : news.slug}) }}" class="btn btn-success btn-large"><i class="icon-white icon-star"></i> Додати новий comments</a></br>
    <div class="col-sm-10">
        {% for comments in news.comment %}

        <li><small class="text-muted">{{ comments.text }}</small></li>

        {% endfor %}
    </div>
    <div class="col-sm-2">
        {#<a href="#" class="pull-right"><img src="{{ news.image }}" class="img-circle"></a>#}
    </div>
</div>

{% endblock %}
