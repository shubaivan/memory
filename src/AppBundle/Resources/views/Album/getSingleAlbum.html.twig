{% extends "::base.html.twig" %}

{% block title %} News {% endblock %}

{% block content %}

        <div class="col-lg-12">
            <div class="col-lg-12">{{ album.name }}</div>

            <div class="col-lg-12">
                <div class="col-lg-4">
                    <img src="#">
                </div>

                <div>
                    <p>
                        Рік випуску: {{ album.year }}
                    </p>

                    <p>
                        Короткий опис: {{ album.text }}
                    </p>
                </div>

                <div>
                    <h3>Songs</h3>

                    {% for song in album.song %}
                        <a href="#">
                            <div>
                                {{ song.name }}
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
{% endblock %}
