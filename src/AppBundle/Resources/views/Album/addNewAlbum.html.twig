{% extends '::base.html.twig' %}

{% block title %}
    Створить альбом
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        {{ form_start(form) }}
            <div class="col-lg-12">
                {{ form_row(form.poster) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.name) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.text) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.year) }}
            </div>

            <div class="col-lg-12">
                <button type="submit">Створити</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
