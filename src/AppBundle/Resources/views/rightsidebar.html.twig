<div class="col-sm-3 col-sm-offset-1 blog-sidebar">

    <div class="sidebar-module">
        <h4>Registration/Login</h4>
        {% if app.user %}
            <div>
                <a href="{{ path('fos_user_profile_show') }}">{{ app.user.username }}</a>   |
                <a href="{{ path('fos_user_security_logout') }}">Logout</a>
            </div>
        {% else %}
            <div>
                <a href="{{ path('hwi_oauth_service_redirect', {'service' : 'vkontakte'}) }}">Вконтакте</a>
            </div>

            <div>
                <a href="{{ path('hwi_oauth_service_redirect', {'service' : 'facebook'}) }}">Facebook</a>
            </div>
        {% endif %}
    </div>
    <div class="sidebar-module">

        {% if app.session.get('user_menu') %}
            <p><a class="btn btn-success" href="{{ path('app_hide_user_menu') }}" role="button">Show site menu</a></p>
        {% else %}
            <p><a class="btn btn-success" href="{{ path('app_show_user_menu') }}" role="button">Show user menu</a></p>
        {% endif %}

        <h4>Album</h4>
        <ol class="list-unstyled">

            {#{{ render(controller('AppBundle:Default:albumTree')) }}#}

        </ol>
    </div>

</div>
