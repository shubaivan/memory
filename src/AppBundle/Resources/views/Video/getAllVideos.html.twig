{% extends "::base.html.twig" %}

{% block title %} Всі вiдео по треку {{ song.name }} альбому {{ song.album.name }} {% endblock %}

{% block content %}



    <div class="col-sm-12" id="featured">
        <div class="page-header text-muted">
            <a href="{{ path('app_get_all_videos_in_song', {'slugAlbum' : song.album.slug, 'slug' : song.slug}) }}">
            Видео</a>
            |<a href="{{ path('app_get_all_chords_in_song', {"slugAlbum" : song.album.slug, "slug" : song.slug}) }}">Chord</a>

        </div>
    </div>

    {% if is_granted('ROLE_USER') %}
        <div>
            <a href="{{ path('app_add_video', {"slugVideo" : song.album.slug, "slug" : song.slug}) }}" class="btn btn-success btn-large"><i class="icon-white icon-star"></i>Добавить видео</a></br>
        </div>
    {% endif %}
    <!--/top story-->
    <div class="row">
        <div class="col-sm-10">
            <h3>List videos</h3>
            <h4><span class="label label-default">Видео</span></h4>
                {% for video in song.video %}

                        <small class="text-muted"><a href="{{ path('app_get_single_video', {"slugAlbum" : video.song.album.slug, "slugSong" : video.song.slug, "slug" : video.slug}) }}"><p>{{ video.name }}</p></a></small>


                {% endfor %}
            <a href="{{ path('app_get_all_albums')}}" class="btn btn-success btn-large"><i class="icon-white icon-star"></i> Back to tha all albums</a></br>
        </div>

        <div class="col-sm-2">
            <a href="#" class="pull-right"><img src="http://api.randomuser.me/portraits/thumb/men/19.jpg" class="img-circle"></a>
        </div>

    </div>







